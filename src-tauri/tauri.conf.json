{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tramando",
  "version": "1.8.0",
  "identifier": "com.tramando.app",
  "build": {
    "beforeBuildCommand": "npx shadow-cljs release app",
    "beforeDevCommand": "npx shadow-cljs watch app",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tramando",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
  "active": true,
  "targets": ["dmg", "app", "nsis", "msi", "deb", "appimage"],
  "icon": [
    "icons/32x32.png",
    "icons/128x128.png",
    "icons/128x128@2x.png",
    "icons/icon.icns",
    "icons/icon.ico"
  ],
  "macOS": {
    "minimumSystemVersion": "10.13",
    "hardenedRuntime": true
  },
  "category": "Productivity",
  "shortDescription": "Tessi la tua storia",
  "longDescription": "Tramando Ã¨ uno strumento per scrittori che vogliono gestire storie complesse: personaggi, luoghi, temi, linee temporali."
  }
}
